@model KontaktViewModel
@{
    ViewBag.Title = "Kontaktieren Sie uns";
    }

@section scripts {

}
    <div class="page-header">
         <h1 style="color: green">Ihre Nachricht an uns</h1>      
     </div>
     <form method="post" class="w3-container w3-card-4 w3-light-grey" style="padding: 10px">
        <div asp-validation-summary="ModelOnly" class="w3-panel w3-red w3-round-large"></div>

	    <div class="form-group">
            <label asp-for="name">Ihr Name:</label>
            <input asp-for="name" class="w3-input w3-border w3-round form-control" style="width: 300px" />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
		
        <div class="form-group">
            <label asp-for="email">Ihre E-Mail-Adresse:</label>
            <input type="email" asp-for="email" class="w3-input w3-border w3-round form-control" style="width: 300px"/>
            <span asp-validation-for="email" class="text-danger"></span>
        </div>

	    <div class="form-group">
            <label asp-for="betreff">Betreff:</label>
            <input type="text" asp-for="betreff" class="w3-input w3-border w3-round form-control" style="width: 500px"/>
            <span asp-validation-for="betreff" class="text-danger"></span>
        </div>
        			
        <div class="form-group">
            <label asp-for="nachricht">Nachricht:</label>
            <textarea rows="4" asp-for="nachricht" class="w3-input w3-border w3-round form-control" style="width: 500px"></textarea>
            <span asp-validation-for="nachricht" class="text-danger"></span>
        </div>

			<div class="form-group">
            <button id="emailSubmit" class="w3-button w3-green form-control" type="submit" ><i class="c"></i>Nachricht senden</button>
            <div class="text-success">@ViewBag.UserMessage</div>
        </div>
</form>
