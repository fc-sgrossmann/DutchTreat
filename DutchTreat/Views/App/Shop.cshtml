@model IEnumerable<Product>
<h1>Shop</h1>
<p>Anzahl: @Model.Count()</p>
@foreach (var p in Model)
{
    <div class="col-md-3">
        <div class="well well-sm">
            <img src="~/img/@(p.ArtId).jpg" class="img-responsive" alt="@p.Title" />
            <h3>@p.Category - @p.Size</h3>
            <ul class="product-props">
                <li>Preis: @p.Price €</li>
                <li>Künstler: @p.Artist</li>
                <li>Titel: @p.Title</li>
                <li>Beschreibung: @p.ArtDescription</li>
            </ul>
            <button id="buyButton" class="btn btn-success">Kaufen</button>
        </div>
    </div>
}
